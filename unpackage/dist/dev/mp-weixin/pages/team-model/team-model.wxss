.team {
  width: 100%;
}
.team-img {
  width: 300rpx;
  height: 300rpx;
  margin: 100rpx auto;
}
.team-img image {
  width: 100%;
  height: 100%;
}
.team-button {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}
.team .showModal {
  background-color: #FFFFFF;
  margin: 80rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}
.team .showModal-title {
  text-align: center;
  color: #474747;
  font-size: 32rpx;
  margin-bottom: 50rpx;
}
.team .showModal-main {
  display: flex;
  margin: 0 40rpx;
}
.team .showModal-main .input-box {
  width: 100%;
  height: 80rpx;
  margin-bottom: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.team .showModal-main-input {
  padding-left: 5rpx;
  width: 100%;
  height: 100%;
  border: 2rpx solid #999;
  display: inline-block;
}
.team .showModal-main.flexW {
  flex-wrap: wrap;
}
.team .showModal .teamInfo {
  margin: 0 40rpx;
}
.team .showModal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-bottom: 20rpx;
}
.team .showModal-btn .view {
  flex: 1;
  font-size: 32rpx;
}
.team .showModal-btn .active {
  flex: 1;
  font-size: 32rpx;
  color: #FDD605;
  text-align: right;
}

