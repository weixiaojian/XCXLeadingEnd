.load.load-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 140rpx;
  left: 0;
  margin: auto;
  width: 240rpx;
  height: 240rpx;
  background-color: #4C4C4C;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
  z-index: 9999;
  line-height: 2.4em;
  overflow: hidden;
}
.load.load-modal image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}
.load.load-modal view {
  font-size: 20rpx;
  line-height: 20rpx;
  font-size: 26rpx;
  color: #ffffff;
}
.load-shadow {
  /* 蒙版 */
  box-shadow: 0 0 0rpx 2000rpx rgba(0, 0, 0, 0.5);
}

